[module/time]
type = internal/date
interval = 60
format = <label>
format-background = #2a2837
date = %{F#888e96} %I:%M %p%{F-}
time-alt = %{F#61afef} %a, %b %d%{F-}

label = %date%%time%


[module/mem]
type = custom/script
exec = free -m | sed -n 's/^Mem:\s\+[0-9]\+\s\+\([0-9]\+\)\s.\+/\1/p'
format = <label>
format-prefix = " ﬙ "
label = %output% MB
label-padding = 1
format-prefix-foreground = #d19a66


[module/powermenu]
type = custom/text
content =" "
content-padding =1
click-left = rofi -show &
content-foreground =  #61afef

[module/volume]
type = custom/script
exec = amixer get Master | awk '$0~/%/{print $4}' | tr -d '[]'
format = <label>
internal = 5.0
label = %output% 
label-foreground = #BF616A
label-padding = 1

[module/cpu]
type = internal/cpu
interval = 2.5

format-prefix = "  " 
format = <label> 

label = CPU %percentage%%

format-background = #2a2837
format-foreground = #989cff

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...



